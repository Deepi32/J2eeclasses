<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
   xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">  

<bean id="e1" class="com.pojo.Employee">
<constructor-arg value="101"/>
<constructor-arg value="DEEPANSHU GOYAl"/>

</bean>

<bean id="address1" class="com.pojo.Address">
<constructor-arg value="1/3"/>
<constructor-arg value="Sarabha Nagar" />
</bean>

<bean id="e3" class="com.pojo.Employee" parent="e1">
<constructor-arg ref="address1"/>

</bean>

</beans>